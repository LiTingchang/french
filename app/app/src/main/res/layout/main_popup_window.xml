<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/title_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView android:id="@+id/main_popup_window_item_1"
            style="@style/MainPopupMenuItem"
            android:src="@drawable/ico_wrong_drawer_l"/>
        <View style="@style/line_vertical_style"
            android:layout_height="48dp"/>
        <ImageView android:id="@+id/main_popup_window_item_2"
            style="@style/MainPopupMenuItem"
            android:src="@drawable/ico_test_drawer_l"/>
        <View style="@style/line_vertical_style"
            android:layout_height="48dp"/>
        <ImageView android:id="@+id/main_popup_window_item_3"
            style="@style/MainPopupMenuItem"
            android:src="@drawable/icon_canon_drawer_l"/>
    </LinearLayout>
    
    <View style="@style/line_horizontal_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView android:id="@+id/main_popup_window_item_4"
            style="@style/MainPopupMenuItem"
            android:src="@drawable/icon_history_drawer_l"/>
        <View style="@style/line_vertical_style"
            android:layout_height="48dp"/>
        <ImageView android:id="@+id/main_popup_window_item_5"
            style="@style/MainPopupMenuItem"
            android:src="@drawable/icon_collection_drawer_l"/>
        <View style="@style/line_vertical_style"
            android:layout_height="48dp"/>
        <ImageView android:id="@+id/main_popup_window_item_6"
            style="@style/MainPopupMenuItem"
            android:src="@drawable/ico_leveltest_drawer_l"/>
    </LinearLayout>

</LinearLayout>
