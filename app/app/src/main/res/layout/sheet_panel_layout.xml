<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".BallSelectorPanel" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView android:id="@+id/shell_panel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"/>

        <TextView android:id="@+id/shell_panel_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:gravity="right"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"/>

    </LinearLayout>

    <com.snail.french.view.FullSizeGridView
        android:id="@+id/shell_panel_grid_view"
        style="@style/shell_panel"
        android:numColumns="5" />

</LinearLayout>
